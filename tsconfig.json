{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": false,
    "strictNullChecks": true,
    "rootDir": "typescript",
    "outDir": "dist",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
}
